            <a href="commu.html">commu</a>
            <%if (!loggedIn){%>
                <a href="/login_or_register" class="btnlogin-popup">Login</a>
            <%}%>
            <%if (loggedIn){%>
                
                    <!-- <a href="/profile"> <%= UserData.username%> </a>
                    <form action="/logout" class="logout" method="post">
                    <button class="btnlogout btnlogin-popup "  type="submit">logout</button>
                    </form> -->
